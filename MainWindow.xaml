<Window x:Class="RecipeManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        
     <Grid>
        <StackPanel>
            <TextBlock Text="Recipe Manager" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
            
            <Button Content="Add Recipe" Click="AddRecipe_Click" Margin="5"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="5"/>
            <Button Content="Add Step" Click="AddStep_Click" Margin="5"/>
            <Button Content="Display Recipes" Click="DisplayRecipes_Click" Margin="5"/>
            <Button Content="Display Recipe" Click="DisplayRecipe_Click" Margin="5"/>
            <Button Content="Scale Recipe" Click="ScaleRecipe_Click" Margin="5"/>
            <Button Content="Reset Scale" Click="ResetScale_Click" Margin="5"/>
            <Button Content="Clear Recipe" Click="ClearRecipe_Click" Margin="5"/>
            
            <TextBox Name="OutputTextBox" Margin="10" VerticalScrollBarVisibility="Auto" Height="200" IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
    